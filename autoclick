local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local SharedModules = ReplicatedStorage:WaitForChild("SharedModules")

-- Load các module an toàn
local GuiFunctions = require(SharedModules:WaitForChild("Others"):WaitForChild("GuiFunctions"))
local WeaponsModule = require(SharedModules:WaitForChild("WeaponsModule"))

-- Đảm bảo Player đã load xong
repeat task.wait(1) until Player:GetAttribute("Loaded") == true

-- Biến điều khiển AutoClick
local autoClicking = true

-- Vòng lặp AutoClick với delay hợp lý
while wait(0.3) do
    -- Nếu AutoClick đang bị tắt thì bật lại
    if Player:GetAttribute("AutoClick") ~= true then
        Player:SetAttribute("AutoClick", true)
    end

    -- Gọi Click liên tục
    WeaponsModule.Click({
        ["KeyCode"] = Enum.KeyCode.ButtonX
    }, false, nil, true)
end
